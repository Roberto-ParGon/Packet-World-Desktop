<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="packetworld.controller.FXMLPackagesController"
            style="-fx-background-color: #F4F6F9;" prefHeight="1080.0" prefWidth="1640.0">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="120" styleClass="header-banner"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets left="30.0" />
            </padding>
            <children>
                <Label text="Paquetes" styleClass="view-title" />
            </children>
        </HBox>

        <HBox spacing="15.0" alignment="CENTER_LEFT"
              AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="150.0">
            <children>
                <HBox alignment="CENTER_LEFT" styleClass="search-box" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                    <children>
                        <Label fx:id="lblFilter" text="≡" styleClass="search-icon-filter" onMouseClicked="#handleFilterIconClick"/>

                        <TextField fx:id="searchField" promptText="ID de envío / descripción (opcional)"
                                   styleClass="transparent-textfield" HBox.hgrow="ALWAYS"/>

                        <Label fx:id="lblSearch" text="×" styleClass="search-icon" onMouseClicked="#handleDeleteSearch"/>
                    </children>
                </HBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Nuevo paquete" fx:id="btnAdd" onAction="#handleAdd" styleClass="action-button, btn-green" minWidth="160.0"/>
                <Button fx:id="btnEdit" text="Editar" onAction="#handleEdit" styleClass="action-button, btn-blue" disable="true" minWidth="160.0"/>
                <Button fx:id="btnDelete" text="Eliminar" onAction="#handleDelete" styleClass="action-button, btn-red" disable="true" minWidth="170.0"/>
            </children>
        </HBox>

        <!-- Table with same CSS class used in collaborators -->
        <TableView fx:id="tvPaquetes" styleClass="custom-table"
                   AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
                   AnchorPane.topAnchor="220.0" AnchorPane.bottomAnchor="30.0">
            <columns>
                <TableColumn fx:id="colId" text="ID" />
                <TableColumn fx:id="colEnvioId" text="Envio ID" />
                <TableColumn fx:id="colDescripcion" text="Descripción" />
                <TableColumn fx:id="colPeso" text="Peso (kg)" />
                <TableColumn fx:id="colDimensiones" text="Dimensiones (A×An×P cm)" />
                <TableColumn fx:id="colCantidad" text="Cant." />
            </columns>
        </TableView>
    </children>

    <stylesheets>
        <URL value="@../resources/styles/collaborators.css"/>
        <URL value="@../resources/styles/styles.css"/>
    </stylesheets>
</AnchorPane>