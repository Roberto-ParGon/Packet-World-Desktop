<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="packetworld.controller.FXMLClientFormController"
            prefWidth="900" prefHeight="600" styleClass="modal-root">
    <children>
        <HBox fx:id="headerContainer" alignment="CENTER_LEFT" prefHeight="70.0" styleClass="modal-header"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets left="30.0"/>
            </padding>
            <children>
                <Label text="Cliente" styleClass="modal-title"/>
            </children>
        </HBox>

        <GridPane hgap="20" vgap="12" AnchorPane.topAnchor="90" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.bottomAnchor="80">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <Label text="Nombre(s)" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="tfFirstName" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="modal-textfield"/>

            <Label text="Apellido" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="tfLastName" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="modal-textfield"/>

            <Label text="Calle" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="tfStreet" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="modal-textfield"/>

            <Label text="Número" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <TextField fx:id="tfNumber" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="modal-textfield"/>

            <Label text="Colonia" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="tfColony" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="modal-textfield"/>

            <Label text="Código Postal" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <TextField fx:id="tfZipCode" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="modal-textfield"/>

            <!-- quitamos ciudad/estado -->

            <Label text="Teléfono" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="tfPhone" GridPane.columnIndex="0" GridPane.rowIndex="7" styleClass="modal-textfield"/>

            <Label text="Email" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="7" styleClass="modal-textfield"/>

        </GridPane>

        <HBox spacing="20" alignment="CENTER_RIGHT" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="40" AnchorPane.leftAnchor="40">
            <children>
                <Button fx:id="btnDelete" text="Eliminar" onAction="#handleDelete" styleClass="button-cancel" visible="false" managed="false"/>
                <Button fx:id="btnCancel" text="Cancelar" onAction="#handleCancel" styleClass="button-cancel"/>
                <Button fx:id="btnSave" text="Guardar" onAction="#handleSave" styleClass="button-save"/>
            </children>
        </HBox>

    </children>
    <stylesheets>
        <URL value="@../resources/styles/collaboratorform.css"/>
    </stylesheets>
</AnchorPane>