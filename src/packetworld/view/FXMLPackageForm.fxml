<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="packetworld.controller.FXMLPackageFormController"
            prefWidth="500.0" prefHeight="500.0" style="-fx-background-color: #f4f4f4;"> 
    <children>
        <VBox spacing="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #e67e22;">
                <padding>
                    <Insets left="20.0" />
                </padding>
                <children>
                    <Label text="Detalle de Paquete" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                </children>
            </HBox>

            <GridPane hgap="15.0" vgap="15.0" style="-fx-padding: 30;">
                <columnConstraints>
                    <ColumnConstraints percentWidth="35" />
                    <ColumnConstraints percentWidth="65" />
                </columnConstraints>

                <children>
                    <Label text="Asignar a Envío" style="-fx-font-weight: bold;" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="cbEnvio" prefWidth="300.0" promptText="Seleccionar Envío..." GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Descripción" style="-fx-font-weight: bold;" GridPane.rowIndex="1"/>
                    <TextArea fx:id="tfDescripcion" prefRowCount="2" wrapText="true" promptText="Contenido del paquete..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Peso (kg)" style="-fx-font-weight: bold;" GridPane.rowIndex="2"/>
                    <TextField fx:id="tfPeso" promptText="0.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Dimensiones (cm)" style="-fx-font-weight: bold;" GridPane.rowIndex="3"/>
                    <HBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <TextField fx:id="tfAlto" promptText="Alto" HBox.hgrow="ALWAYS"/>
                        <Label text="x"/>
                        <TextField fx:id="tfAncho" promptText="Ancho" HBox.hgrow="ALWAYS"/>
                        <Label text="x"/>
                        <TextField fx:id="tfProfundidad" promptText="Prof." HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <Label text="Cantidad" style="-fx-font-weight: bold;" GridPane.rowIndex="4"/>
                    <Spinner fx:id="spCantidad" editable="true" maxWidth="100" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <Region VBox.vgrow="ALWAYS"/>

            <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
                <children>
                    <Button fx:id="btnCancel" text="Cancelar" onAction="#handleCancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;"/>
                    <Button fx:id="btnSave" text="Guardar Paquete" onAction="#handleSave" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>