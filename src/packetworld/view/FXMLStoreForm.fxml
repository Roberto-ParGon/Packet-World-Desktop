<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="packetworld.controller.FXMLStoreFormController"
            prefHeight="600.0" prefWidth="800.0" styleClass="modal-root">

    <children>
        <HBox fx:id="headerContainer" alignment="CENTER_LEFT" prefHeight="70.0" styleClass="modal-header"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets left="30.0" />
            </padding>
            <children>
                <Label fx:id="lblTitle" text="Registrar Sucursal" styleClass="modal-title" />
            </children>
        </HBox>

        <VBox AnchorPane.topAnchor="90.0" AnchorPane.bottomAnchor="80.0" 
              AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0" spacing="20.0">
            <children>
                
                <GridPane hgap="30.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" /> 
                        <ColumnConstraints percentWidth="70" /> 
                    </columnConstraints>
                    
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Código Único" styleClass="field-label"/>
                        <TextField fx:id="tfCode" promptText="Ej. SUC-001" styleClass="modal-textfield"/>
                    </VBox>
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Nombre de la Sucursal" styleClass="field-label"/>
                        <TextField fx:id="tfName" promptText="Ej. Sucursal Centro Histórico" styleClass="modal-textfield"/>
                    </VBox>
                </GridPane>

                <Label text="Dirección y Ubicación" styleClass="section-label">
                    <padding>
                        <Insets top="10" bottom="5"/>
                    </padding>
                </Label>

                <GridPane hgap="30.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="60" /> 
                        <ColumnConstraints percentWidth="40" /> 
                    </columnConstraints>
                    
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Calle" styleClass="field-label"/>
                        <TextField fx:id="tfStreet" promptText="Calle Principal" styleClass="modal-textfield"/>
                    </VBox>
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Número" styleClass="field-label"/>
                        <TextField fx:id="tfNumber" promptText="Exterior / Interior" styleClass="modal-textfield"/>
                    </VBox>
                </GridPane>

                <GridPane hgap="30.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Colonia" styleClass="field-label"/>
                        <TextField fx:id="tfColony" promptText="Colonia" styleClass="modal-textfield"/>
                    </VBox>
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Código Postal" styleClass="field-label"/>
                        <TextField fx:id="tfZipCode" promptText="00000" styleClass="modal-textfield"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Ciudad" styleClass="field-label"/>
                        <TextField fx:id="tfCity" promptText="Ciudad" styleClass="modal-textfield"/>
                    </VBox>
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="Estado" styleClass="field-label"/>
                        <TextField fx:id="tfState" promptText="Estado" styleClass="modal-textfield"/>
                    </VBox>
                </GridPane>
                
                <HBox alignment="CENTER_RIGHT">
                    <Label fx:id="lblStatus" text="Estatus: Activa" visible="false"
                           style="-fx-font-weight: bold; -fx-text-fill: #4CAF50; -fx-font-size: 14px;"/>
                </HBox>

            </children>
        </VBox>

        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
            <children>
                <Button fx:id="btnDelete" text="Dar de baja Sucursal" onAction="#handleDelete" 
                        styleClass="action-button, btn-red" visible="false" managed="false"/>
                
                <Pane HBox.hgrow="ALWAYS" /> 
                <Button fx:id="btnCancel" text="Cancelar" onAction="#handleCancel" styleClass="button-cancel" />
                <Button fx:id="btnSave" text="Guardar Datos" onAction="#handleSave" styleClass="button-save" />
            </children>
        </HBox>

    </children>

    <stylesheets>
        <URL value="@../resources/styles/collaboratorform.css"/>
    </stylesheets>
</AnchorPane>