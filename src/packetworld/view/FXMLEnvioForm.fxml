<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="packetworld.controller.FXMLEnviosFormController"
            prefWidth="900.0" prefHeight="780.0" styleClass="modal-root">

    <children>
        <HBox fx:id="headerContainer"
              alignment="CENTER_LEFT"
              prefHeight="70.0"
              styleClass="modal-header"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <padding>
                <Insets left="30.0"/>
            </padding>
            <children>
                <Label fx:id="lblTitle" text="Gestión de Envío" styleClass="modal-title"/>
            </children>
        </HBox>

        <HBox spacing="40.0"
              AnchorPane.topAnchor="90.0"
              AnchorPane.bottomAnchor="80.0"
              AnchorPane.leftAnchor="40.0"
              AnchorPane.rightAnchor="40.0">
            <children>

                <VBox spacing="15.0" prefWidth="50.0">
                </VBox>

                <GridPane hgap="20.0" vgap="12.0" HBox.hgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50.0"/>
                        <ColumnConstraints percentWidth="50.0"/>
                    </columnConstraints>

                    <children>
                        <Label text="Cliente" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label text="Fecha Creación" styleClass="field-label" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <ComboBox fx:id="cbCliente" maxWidth="Infinity" 
                                  GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        
                        <TextField fx:id="tfFecha" editable="false" style="-fx-opacity: 0.8;" 
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Tracking # (Generado)" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label text="Costo (Calculado Automáticamente)" styleClass="field-label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <TextField fx:id="tfTracking" editable="false" promptText="Pendiente..." style="-fx-background-color: #f0f0f0;"
                                   GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="tfCosto" editable="false" promptText="Se calculará al guardar" style="-fx-background-color: #f0f0f0;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="Sucursal Origen" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <Label text="Dirección Destino" styleClass="field-label" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <ComboBox fx:id="cbSucursal" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextField fx:id="tfDestino" promptText="Calle, Número, Colonia, CP..." GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                        <Label text="Destinatario (Nombre)" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                        <Label text="Teléfono Destinatario" styleClass="field-label" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                        <TextField fx:id="tfDestinatarioNombre" promptText="Nombre de quien recibe" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                        <TextField fx:id="tfDestinatarioTelefono" promptText="10 dígitos" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                        <Label text="Ciudad Destino" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                        <Label text="Estado Destino" styleClass="field-label" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                        <TextField fx:id="tfCiudadDestino" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                        <TextField fx:id="tfEstadoDestino" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

                        <Label text="Peso del Paquete (kg)" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
                        <Label text="Estatus Actual" styleClass="field-label" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

                        <TextField fx:id="tfPeso" promptText="Ej. 1.5" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
                        <ComboBox fx:id="cbEstado" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

                        <VBox spacing="8.0" styleClass="assigned-driver-section" 
                              GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="12">
                            <padding>
                                <Insets top="15.0" right="0.0" bottom="0.0" left="0.0"/>
                            </padding>
                            <children>
                                <Separator />
                                <Label text="Información de Conductor" style="-fx-font-weight:bold; -fx-text-fill: #555;"/>
                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="Conductor Asignado:" />
                                        <Label fx:id="lblAssignedDriver" text="—" style="-fx-font-weight: bold;"/>
                                        
                                        <Pane HBox.hgrow="ALWAYS" />
                                        
                                        <Button fx:id="btnUnassignDriver" text="Desasignar Conductor" 
                                                onAction="#handleUnassignDriver" styleClass="action-button, btn-red" 
                                                visible="false" managed="false"/>
                                    </children>
                                </HBox>
                                <Label fx:id="lblAssignedInfo" text="" style="-fx-font-size:11px; -fx-text-fill:gray;"/>
                            </children>
                        </VBox>

                    </children>
                </GridPane>
            </children>
        </HBox>

        <HBox spacing="20.0" alignment="CENTER_RIGHT"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets right="40.0" bottom="30.0"/>
            </padding>
            <children>
                <Button fx:id="btnCancel" text="Cancelar" onAction="#handleCancel" styleClass="action-button, btn-cancel" minWidth="120.0"/>
                <Button fx:id="btnSave" text="Guardar Envío" onAction="#handleSave" styleClass="action-button, btn-save" minWidth="150.0"/>
            </children>
        </HBox>
    </children>

    <stylesheets>
        <URL value="@../resources/styles/collaboratorform.css"/>
    </stylesheets>
</AnchorPane>