<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="packetworld.controller.FXMLAssignVehicleController"
            prefHeight="550.0" prefWidth="500.0" styleClass="modal-root">

    <children>
        <HBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: #f5f5f5; -fx-border-color: transparent transparent #e0e0e0 transparent;"
              AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Label text="Gestión de Vehículo" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1E2240;"/>
            </children>
        </HBox>

        <VBox alignment="CENTER" spacing="25.0" 
              AnchorPane.topAnchor="60.0" AnchorPane.bottomAnchor="80.0" 
              AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
            
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>

            <children>
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Conductor Seleccionado" style="-fx-font-size: 12px; -fx-text-fill: #9e9e9e; -fx-font-weight: bold;"/>
                    <Label fx:id="lblMessage" wrapText="true" textAlignment="CENTER" 
                           text="Nombre Apellido" 
                           style="-fx-font-size: 18px; -fx-text-fill: #424242; -fx-font-weight: bold;"/>
                </VBox>

                <Separator prefWidth="200.0" />

                <VBox fx:id="vbCurrentAssignment" alignment="CENTER" spacing="15" visible="false" managed="false" 
                      style="-fx-background-color: #e3f2fd; -fx-background-radius: 8; -fx-border-color: #bbdefb; -fx-border-radius: 8; -fx-border-width: 1;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <children>
                                <VBox>
                                    <Label text="ASIGNACIÓN ACTUAL" style="-fx-font-size: 10px; -fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                                    <Label fx:id="lblCurrentVehicle" text="Nissan Versa - VIN: 123..." 
                                           style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #0d47a1;"/>
                                </VBox>
                            </children>
                        </HBox>
                        
                        <Button fx:id="btnUnassign" text="Liberar Vehículo" onAction="#handleUnassign" 
                                maxWidth="Infinity"
                                style="-fx-background-color: #ef5350; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 4;"/>
                    </children>
                </VBox>

                <VBox spacing="10.0" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                    <children>
                        <Label text="Asignar Nueva Unidad" style="-fx-font-size: 14px; -fx-text-fill: #616161; -fx-font-weight: bold;"/>
                        
                        <ComboBox fx:id="cbVehicles" promptText="Seleccione un vehículo disponible..." 
                                  maxWidth="Infinity" styleClass="modal-combo" style="-fx-font-size: 13px;"/>
                        
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <Label text="ℹ" style="-fx-text-fill: #1976d2;"/>
                            <Label text="Seleccionar una unidad reemplazará la actual si existe." 
                                   style="-fx-font-size: 14px; -fx-text-fill: #757575; -fx-font-style: italic;"/>
                        </HBox>
                    </children>
                </VBox>
                
            </children>
        </VBox>

        <HBox spacing="20.0" alignment="CENTER_RIGHT" prefHeight="70.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              style="-fx-background-color: transparent;">
            <padding>
                <Insets right="40.0" bottom="20.0"/>
            </padding>
            <children>
                <Button fx:id="btnCancel" text="Cancelar" onAction="#handleCancel" 
                        styleClass="button-cancel" prefWidth="100.0" />
                <Button fx:id="btnAssign" text="Guardar" onAction="#handleAssign" 
                        styleClass="button-save" prefWidth="140.0" />
            </children>
        </HBox>

    </children>
    
    <stylesheets>
        <URL value="@../resources/styles/collaboratorform.css"/>
    </stylesheets>
</AnchorPane>