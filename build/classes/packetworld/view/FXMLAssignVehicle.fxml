<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="packetworld.controller.FXMLAssignVehicleController"
            prefHeight="400.0" prefWidth="500.0" styleClass="modal-root">

    <children>
        <VBox alignment="CENTER" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Label text="Asignarle un Vehículo a un Conductor" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1E2240;"/>
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="20.0" 
              AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <children>
                
                <Label fx:id="lblMessage" wrapText="true" 
                       textAlignment="CENTER" alignment="CENTER" maxWidth="Infinity"
                       text="¿A qué vehículo desea asignarle el conductor Nombre Apellido?" 
                       style="-fx-font-size: 16px; -fx-text-fill: #424242;"/>
                
                <VBox spacing="8.0">
                    <children>
                        <Label text="Vehículo" styleClass="field-label" style="-fx-font-weight: bold; -fx-text-fill: #757575;"/>
                        <ComboBox fx:id="cbVehicles" promptText="Seleccione una unidad" 
                                  maxWidth="Infinity" styleClass="modal-combo"/>
                    </children>
                </VBox>
            </children>
        </VBox>

        <HBox spacing="35.0" alignment="BASELINE_RIGHT" prefHeight="70.0"
              AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="50">
            <children>
                <Button fx:id="btnCancel" text="Cancelar" onAction="#handleCancel" 
                        styleClass="button-cancel" prefWidth="120.0" />
                <Button fx:id="btnAssign" text="Asignar" onAction="#handleAssign" 
                        styleClass="button-save" prefWidth="120.0" />
            </children>
        </HBox>

    </children>
    
    <stylesheets>
        <URL value="@../resources/styles/collaboratorform.css"/>
    </stylesheets>
</AnchorPane>